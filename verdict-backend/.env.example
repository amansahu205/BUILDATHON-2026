# verdict-backend/.env

# App
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173
LOG_LEVEL=info

# Database (Supabase)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?pgbouncer=true"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE"

# Redis (Upstash â€” get free at upstash.com)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-minimum-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-256-bit
JWT_ACCESS_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_BUCKET_NAME=verdict-documents-hackathon

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_INTERROGATOR_VOICE_ID=
ELEVENLABS_COACH_VOICE_ID=

# NVIDIA Nemotron via OpenRouter (get key at openrouter.ai/keys)
NEMOTRON_API_KEY=
NEMOTRON_BASE_URL=https://openrouter.ai/api/v1
NEMOTRON_MODEL=nvidia/llama-3.1-nemotron-ultra-253b-v1
NEMOTRON_TIMEOUT_MS=15000
NEMOTRON_HTTP_REFERER=https://verdict.law
NEMOTRON_X_TITLE=VERDICT

# Databricks Vector Search (via FastAPI retrieval proxy)
# DATABRICKS_HOST: URL of the retrieval proxy (e.g. http://127.0.0.1:8000)
# DATABRICKS_TOKEN: Personal access token for the proxy
# DATABRICKS_RETRIEVE_PATH: POST endpoint path for retrieval (default: /api/retrieve)
DATABRICKS_HOST=
DATABRICKS_TOKEN=
DATABRICKS_RETRIEVE_PATH=/api/retrieve
DATABRICKS_VECTOR_ENDPOINT=verdict-vector-endpoint
DATABRICKS_VECTOR_INDEX=verdict.sessions.prior_statements_index
DATABRICKS_FRE_INDEX=verdict.sessions.fre_rules_index
