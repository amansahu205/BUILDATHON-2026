# verdict-backend/.env

# App
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173
LOG_LEVEL=info

# Database (Supabase)
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?pgbouncer=true"
DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE"

# Redis (Upstash — get free at upstash.com)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=verdict-super-secret-jwt-key-minimum-32-chars-hackathon
JWT_REFRESH_SECRET=verdict-refresh-secret-256-bit-hackathon-2026
JWT_ACCESS_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=30d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
S3_BUCKET_NAME=verdict-documents-hackathon

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# ElevenLabs
ELEVENLABS_API_KEY=
ELEVENLABS_INTERROGATOR_VOICE_ID=
ELEVENLABS_COACH_VOICE_ID=

# NVIDIA Nemotron
NEMOTRON_API_KEY=
NEMOTRON_BASE_URL=https://integrate.api.nvidia.com/v1
NEMOTRON_MODEL=nvidia/llama-3.1-nemotron-ultra-253b-v1
NEMOTRON_TIMEOUT_MS=5000

# Databricks Vector Search
# Workspace URL: https://adb-<workspace-id>.azuredatabricks.net
# Token: generate at User Settings → Developer → Access tokens
DATABRICKS_HOST=
DATABRICKS_TOKEN=
DATABRICKS_VECTOR_ENDPOINT=verdict-vector-endpoint
DATABRICKS_VECTOR_INDEX=verdict.sessions.prior_statements_index
DATABRICKS_FRE_INDEX=verdict.sessions.fre_rules_index